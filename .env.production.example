# Production Environment Variables
# Copy this file to .env.production and fill in your values

# ============================================
# DATABASE (Supabase PostgreSQL)
# ============================================

# Transaction mode (for app runtime - with connection pooling)
# Get from: Supabase → Settings → Database → Connection string → Transaction mode
DATABASE_URL="postgresql://postgres.xxxxxxxxxxxx:[YOUR-PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection (for migrations - without pooling)
# Same as above but change port from 6543 to 5432 and remove ?pgbouncer=true
DIRECT_URL="postgresql://postgres.xxxxxxxxxxxx:[YOUR-PASSWORD]@aws-0-us-east-1.pooler.supabase.com:5432/postgres"

# ============================================
# AUTH & SECURITY
# ============================================

# Generate a secure random string (minimum 32 characters)
# You can use: openssl rand -base64 32
SESSION_SECRET="change-this-to-a-random-32-character-string-in-production"

# Session expiration time in milliseconds (default: 7 days)
SESSION_MAX_AGE=604800000

# ============================================
# APPLICATION
# ============================================

# Your production URL (Vercel will provide this)
NEXT_PUBLIC_APP_URL="https://your-project.vercel.app"

# Application name
NEXT_PUBLIC_APP_NAME="Menu Create"

# ============================================
# SUPER ADMIN (for database seeding)
# ============================================

# ⚠️ CHANGE THESE IN PRODUCTION!
# These credentials will be used by `npm run deploy:seed`
SUPER_ADMIN_EMAIL="admin@your-domain.com"
SUPER_ADMIN_PASSWORD="YourSecurePassword123!"

# ============================================
# OPTIONAL FEATURES
# ============================================

# Enable analytics tracking
ENABLE_ANALYTICS=true

# ============================================
# NOTES
# ============================================

# 1. NEVER commit this file with real values to git
# 2. Use strong, unique passwords for production
# 3. Keep SESSION_SECRET private and random
# 4. For Vercel deployment, add these variables in the Vercel dashboard
