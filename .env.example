# Database (PostgreSQL)
# Default configuration works with docker-compose.yml
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://menuadmin:menupass@localhost:5434/menudb?schema=public"

# Direct URL for migrations (same as DATABASE_URL for local, different for Supabase)
# For Supabase: use port 5432 without pgbouncer parameter
DIRECT_URL="postgresql://menuadmin:menupass@localhost:5434/menudb?schema=public"

# Auth & Security
SESSION_SECRET="your-super-secret-session-key-change-this-in-production-min-32-chars"
SESSION_MAX_AGE=604800000

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Menu Create"

# Super Admin (for database seeding)
# These credentials will be used by `npm run db:seed`
# ⚠️ CHANGE THESE IN PRODUCTION!
SUPER_ADMIN_EMAIL="admin@menu.local"
SUPER_ADMIN_PASSWORD="admin123"

# Optional Features
ENABLE_ANALYTICS=true
